                        </th>
                        @*<th class="border border-info">
                            @Html.DisplayNameFor(model => model.Users[0].User_type)
                        </th>
                        <th class="border border-info">
            @Html.DisplayNameFor(model => model.Users[0].Projectid)
        </th>*@
                        <th class="border border-info">
