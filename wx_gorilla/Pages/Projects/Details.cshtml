                        <th class="border border-info"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users) {
                    <tr>
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.Department.Dept_name)
                        </td>
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.User_name)
                        </td>
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.User_account)
                        </td>
                        @*<td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.User_type)
                        </td>
                        <td class="border border-primary">
            @Html.DisplayFor(modelItem => item.Project.Project_name)
        </td>*@
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.Barcode)
                        </td>
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.wx_unique_id)
                        </td>
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.Roleid)
                        </td>
                        @*<td class="border border-primary">
            @Html.DisplayFor(modelItem => item.User_password)
        </td>*@
                        <td class="border border-primary">
                            @Html.DisplayFor(modelItem => item.Login_time)
                        </td>
                        <td class="border border-primary">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success dropdown-toggle btn-xs"
                                        data-toggle="dropdown">
                                    操作
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a asp-page="./Details" asp-route-id="@item.Id">重置密码</a>
                                    </li>
                                    <li>
                                        <a asp-page="/Users/Edit" asp-route-id="@item.Id" asp-route-deptid="@item.Departmentid">修改</a>
                                    </li>
