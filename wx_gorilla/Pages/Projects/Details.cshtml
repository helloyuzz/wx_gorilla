            <span class="span1">
                @Html.DisplayFor(model => model.Project.Project_imple)
            </span>
        </div>
        <div class="col-md-4">
            <span class="text-dark font-weight-bold">
                @Html.DisplayNameFor(model => model.Project.Phone)
            </span>
            <span class="span1">
                @Html.DisplayFor(model => model.Project.Phone)
            </span>
        </div>
    </div>

    <p>
    </p>
    <ul id="myTab" class="nav nav-tabs">
        <li class="active">
            <a href="#department" data-toggle="tab">科室</a>
        </li>
        <li><a href="#user" data-toggle="tab">人员</a></li>
        <li class="dropdown">
            <a href="#menuItem" id="myTabDrop1" class="dropdown-toggle"
               data-toggle="dropdown">
                本院管理
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="myTabDrop1">
                <li>
                    <a asp-page="/Departments/Create" asp-route-id="@Model.Project.ID">添加科室</a>
                </li>
                <li>
                    <a asp-page="/Users/Create" asp-route-id="@Model.Project.ID">添加人员</a>
                </li>
                <li role="presentation" class="divider"></li>
                <li>
                    <a href="#subscribe" tabindex="-1" data-toggle="tab">订阅管理</a>
                </li>
                <li>
                    <a href="#qrcode" tabindex="-1" data-toggle="modal" data-target="#exampleModal">二维码</a>
                </li>
                <li role="presentation" class="divider"></li>
                <li>
                    <a asp-page="/Projects/Delete" asp-route-id="@Model.Project.ID">删除</a>
                </li>
            </ul>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="department">
            <table class="table table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th class="border border-info">
                            @Html.DisplayNameFor(model => model.Departments[0].Dept_name)
                        </th>
                        <th class="border border-info">
                            @Html.DisplayNameFor(model => model.Departments[0].Short_name)
                        </th>
                        <th class="border border-info">
                            @Html.DisplayNameFor(model => model.Departments[0].Barcode)
                        </th>
                        @*<th>
