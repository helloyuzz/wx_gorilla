                            </th>*@
                        <th class="border border-info"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Departments) {
                        <tr>
                            <td class="border border-primary">
                                @Html.DisplayFor(modelItem => item.Dept_name)
                            </td>
                            <td class="border border-primary">
                                @Html.DisplayFor(modelItem => item.Short_name)
                            </td>
                            <td class="border border-primary">
                                <a href="##"><span class="badge badge-info">查看</span></a>
                                @Html.DisplayFor(modelItem => item.Barcode)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Projectid)
                                </td>*@
                            <td class="border border-primary">
                                <div class="dropdown">
                                    <button type="button" class="btn btn-success dropdown-toggle btn-xs"
                                            data-toggle="dropdown">
                                        操作
                                    </button>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                        @*<li role="presentation">
                                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                            </li>*@
                                        <li role="presentation">
                                            <a asp-page="/Departments/Edit" asp-route-id="@item.Id">Edit</a>
                                        </li>
                                        <li role="presentation" class="divider"></li>
                                        <li role="presentation">
                                            <a asp-page="/Departments/Delete" asp-route-id="@item.Id">Delete</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="user">
            <table class="table table-bordered table-hover table-condensed">
