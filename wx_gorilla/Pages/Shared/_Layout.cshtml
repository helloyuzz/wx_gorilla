            @{
                for (int imgFile = 1; imgFile <= 18; imgFile++) {
                    string imgPath = "/images/" + imgFile + ".jpg";
                    <li><a href="#Link"><img src="@imgPath" style="width:216px;" onclick="changeTheme('@imgPath');" /></a></li>
                }
