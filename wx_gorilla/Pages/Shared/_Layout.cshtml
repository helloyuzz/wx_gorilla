<!DOCTYPE html>
<html lang="en" style="height:100%;">
@{
    ViewData["Title"] = "蓝鹰追溯";

    // 当前是否登录
    bool isLogoned = Context.Session.Keys.Contains(com.wechat.gorilla.Globals.SessionKey_CUA);

    // 登录界面不显示滚动条，进入主界面才显示    
    string showScroll = "hidden";

    // 是否显示左边菜单栏
    string showPanel = "";

    // 当前用户名
    com.wechat.gorilla.Models.User cua = null;

    if (isLogoned == true) {
        //var cua_Bytes = new Byte[768];
        //Context.Session.TryGetValue(com.wechat.gorilla.Globals.SessionKey_CUA, out cua_Bytes);

        cua = com.wechat.gorilla.Globals.Current_user;

        // 从Session中获取是否显示菜单的设置
        var showPanel_Bytes = new Byte[30];
        bool isTrySession = Context.Session.TryGetValue(com.wechat.gorilla.Globals.SessionKey_SwitchPanel, out showPanel_Bytes);
        if (isTrySession) {
            showPanel = System.Text.Encoding.UTF8.GetString(showPanel_Bytes);
            showPanel = showPanel.Replace("\"", "");
            if (showPanel.Equals("none")) {
                showPanel = "display:none;";
            }
        }
        var activeMenuId_Bytes = new Byte[128];
        isTrySession = Context.Session.TryGetValue(com.wechat.gorilla.Globals.SessionKey_ActiveMenuId, out activeMenuId_Bytes);
        if (isTrySession) {
            string activeMenu_id = System.Text.Encoding.UTF8.GetString(activeMenuId_Bytes);
            activeMenu_id = activeMenu_id.Replace("\"", "");
            com.wechat.gorilla.Globals.NaviMenus.ForEach(a => a.MenuClass_default = "MenuClass_default");
            com.wechat.gorilla.Globals.NaviMenus.ForEach(a => a.MenuClass_hover = "MenuClass_hover");
            com.wechat.gorilla.Globals.NaviMenus.FirstOrDefault(a => a.Menu_id.Equals(activeMenu_id)).MenuClass_default = "MenuClass_hover";
            com.wechat.gorilla.Globals.NaviMenus.FirstOrDefault(a => a.Menu_id.Equals(activeMenu_id)).MenuClass_hover = "MenuClass_active";
        }

        if (cua == null) {
            showScroll = "hidden";
        } else {
            showScroll = "auto";
        }
    }
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body style="height:100%;background-image:url('/images/9.jpg'); background-position:center;background-repeat:no-repeat;background-size:100%;">
        <table style="height:100%;width:100%;border:1px solid;">
            <tr>
                @if (isLogoned) {
                    <td id="panelMenu" style="vertical-align:top;width:273px;@showPanel" rowspan="2">
                        <a class="navbar-brand text-white navMenuItem_Title" style="font-size:13.5pt;padding:0px;margin:0px;padding-left:26px;padding-top:18px;" asp-area="" asp-page="/Index">蓝鹰追溯CSSD在线管理系统</a>
                        <table style="width:100%;" cellspacing="2" cellpadding="2">
                            @{ foreach (var item in com.wechat.gorilla.Globals.NaviMenus) {
                                    <tr>
                                        <td id="@item.Menu_id" onclick="ClickMenu('@item.Menu_id');" class="@item.MenuClass_default" onmouseover="changeStyle('@item.Menu_id', '@item.MenuClass_hover');" onmouseout="changeStyle('@item.Menu_id', '@item.MenuClass_default');">
                                            <a asp-area="" asp-page="@item.AspPage" style="color:#fff;text-decoration:none;"><span class="@item.Menu_icons"></span>@item.MenuText</a>
                                        </td>
                                    </tr>

                                }
                            }
                        </table>
                    </td>
                    <td style="width:30px;vertical-align:top;padding-top:16px;text-align:right;" align="center" rowspan="2">
                        <span class="glyphicon glyphicon-align-justify text-shadow" style="color:#eee;" onclick="SwitchPanel();"></span>
                        <input id="hidden_ShowPanel" name="hidden_ShowPanel" type="hidden" value="@showPanel" />
                    </td>
                }
                <td style="vertical-align:top;padding-left:13px;">
                    <div style="height:100%;width:100%;overflow-x:hidden;overflow-y: @showScroll;">
                        @RenderBody()
                        @*<main role="main" class="pb-3">
                </main>*@
                    </div>
                </td>
            </tr>
            <tr>
                <td height="30px" style="padding-left: 13px;color:#fff;" class="text-shadow">
                    &copy; 2020 - <a asp-area="" asp-page="/Index" class="text-white text-shadow">蓝鹰追溯</a> - <a asp-area="" asp-page="/Privacy" class="text-white text-shadow">Privacy</a>
                    @*<footer class="border-top footer text-muted">
                            <div class="container">
                            </div>
                        </footer>*@
                </td>
            </tr>
        </table>
        <iframe id="ChangeShowPanelIframe" name="ChangeShowPanelIframe" src="" hidden="hidden">
        </iframe>
        <script>
            function ClickMenu(menu_id) {
                $('#ChangeShowPanelIframe').attr('src', '/HidePanelPage?activeMenuId=' + menu_id);
                $('#ChangeShowPanelIframe').reload();
            }
            function changeStyle(objid,type) {
                $('#' + objid).attr('class', type);
            }
            function SwitchPanel() {
                var showPanel = $('#hidden_ShowPanel').val();
                if (showPanel.indexOf("none") != -1) {  // "display:none;"
                    $('#panelMenu').show();
                    $('#hidden_ShowPanel').val('block');
                    $('#ChangeShowPanelIframe').attr('src', '/HidePanelPage?showPanel=block');
                    $('#ChangeShowPanelIframe').reload();
                } else {
                    $('#panelMenu').hide();
                    $('#hidden_ShowPanel').val('none');
                    $('#ChangeShowPanelIframe').attr('src', '/HidePanelPage?showPanel=none');
                    $('#ChangeShowPanelIframe').reload();
                }
            }
            function Init() {
                $('#ChangeShowPanelIframe').attr('src', '');
                $('#ChangeShowPanelIframe').reload();
            }
            onload = Init;
        </script>

        @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
</body>
</html>


