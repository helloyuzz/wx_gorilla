@page
@model com.wechat.gorilla.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
    string project_id = Request.Query["id"];
}

<h1 class="text-shadow">@Model.Project_name / &lt;新建科室&gt;</h1>
<div class="transprantBackground">
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" asp-page="/Projects/Details" asp-route-id="@project_id">Back to Project</a>
            @*<a class="btn btn-success" asp-area="" onclick="window.history.go(-1); return false;">Back To List</a>*@
            <p></p>
        </div>
    </div>
    <form method="post" autocomplete="off">
        <div class="row">
            <div class="col-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Department.Dept_name" class="control-label"></label>
                    <input asp-for="Department.Dept_name" class="form-control" />
                    <span asp-validation-for="Department.Dept_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department.Short_name" class="control-label"></label>
                    <input asp-for="Department.Short_name" class="form-control" />
                    <span asp-validation-for="Department.Short_name" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="Department.Projectid" class="control-label"></label>
                    <input asp-for="Department.Projectid" class="form-control" />
                    <span asp-validation-for="Department.Projectid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <input style="width:100%;border:none;color:red;background:#fff;" disabled asp-for="Error_msg" />
                </div>
            </div>
        </div>
    </form>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
