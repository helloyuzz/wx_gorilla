@page
@model com.wechat.gorilla.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
}

@*<h1>@Model.Project_name / &lt;@Model.Department.Dept_name&gt;</h1>*@
<div class="transprantBackground">
    <p class="page_title">修改科室</p>
    <form method="post" autocomplete="off">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Department.Id" />
                <div class="form-group">
                    <label asp-for="Department.Dept_name" class="control-label"></label>
                    <input asp-for="Department.Dept_name" class="form-control" />
                    <span asp-validation-for="Department.Dept_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department.Short_name" class="control-label"></label>
                    <input asp-for="Department.Short_name" class="form-control" />
                    <span asp-validation-for="Department.Short_name" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="Department.Projectid" class="control-label"></label>
                    <input asp-for="Department.Projectid" class="form-control" />
                    <span asp-validation-for="Department.Projectid" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <label asp-for="Department.Projectid" class="control-label"></label>
                        <select asp-for="Department.Projectid" class="form-control" asp-items="ViewBag.Projectid"></select>
                        <span asp-validation-for="Department.Projectid" class="text-danger"></span>
                    </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="/Projects/Details" asp-route-id="@Model.Department.Projectid">Cancel</a>
            </div>
            </div>
        </div>
    </form>

    <div>
        @*<a asp-page="./Index">Back to List</a>*@
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
