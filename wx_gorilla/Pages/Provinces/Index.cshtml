@page
@model com.wechat.gorilla.Pages.Provinces.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>全国省市字典管理</h1>
<form id="searchForm" method="get">
    <table width="100%">
        <tr>
            <td style="width:300px;">
                @*<div><a asp-page="Create">Create New</a></div>*@
                <h4>Province and City</h4>
            </td>
            <td style="width:130px;">
                <div class="form-group" style="width:126px">
                    <select class="form-control" asp-for="SearchType" onchange="document.getElementById('searchForm').submit();">
                        <option>全部类型</option>
                        <option>省</option>
                        <option>直辖市</option>
                        <option>建设兵团</option>
                        <option>自治区</option>
                        <option>特别行政区</option>
                    </select>
                </div>
            </td>
            <td style="width:113px;">
                <div class="form-group" style="width:113px;">
                    <select class="form-control" asp-for="SearchArea" onchange="document.getElementById('searchForm').submit();">
                        <option>地理位置</option>
                        <option>华北地区</option>
                        <option>东北地区</option>
                        <option>西北地区</option>
                        <option>华东地区</option>
                        <option>华中地区</option>
                        <option>华南地区</option>
                        <option>西南地区</option>
                        <option>港澳台</option>
                    </select>
                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
</form>
<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Province[0].Province_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province[0].Province_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province[0].Province_area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Province) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Province_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province_area)
            </td>
            <td>
                <div class="dropdown">
                    <button type="button" class="btn dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
                        操作
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                        <li role="presentation">
                            <a asp-page="./Details" asp-route-id="@item.Id">Detail</a>
                        </li>
                        <li role="presentation">
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        </li>
                        <li role="presentation" class="divider"></li>
                        <li role="presentation">
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </li>
                    </ul>
                </div>                
            </td>
        </tr>
}
    </tbody>
</table>
