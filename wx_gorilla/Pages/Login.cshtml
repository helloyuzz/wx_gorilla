@page
@model com.wechat.gorilla.Pages.LoginModel
@{
}
<form class="form-horizontal" role="form" method="post" style="height:100%;overflow:hidden;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-center" style="width:100%;height:100%;position:relative; vertical-align:middle;overflow:hidden;">
        <div class="text-center transprantBackground" style="border-radius:8px; width:580px;height:340px; position:absolute; margin: auto; top: 0; left: 0; right: 0; bottom: 0;padding-right:26px;">
            <h1 class="text-dark">蓝鹰追溯CSSD在线管理系统</h1>
            <br />
            <div class="alert alert-success" style="display:@Model.tipDisplayed">
                <button type="button" class="close" data-dismiss="alert"
                        aria-hidden="true">
                    &times;
                </button>
                <span style="color:red;font-size:12pt;">错误：登录失败！请输入正确的帐号和密码。</span>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">帐号：</label>
                <div class="col-sm-10" style="text-align:left;">
                    <input type="text" class="form-control" asp-for="Account" placeholder="请输入帐号" autocomplete="off" style="ime-mode:disabled;">
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-2 control-label">密码：</label>
                <div class="col-sm-10" style="text-align:left;">
                    <input type="password" class="form-control" asp-for="Password" placeholder="请输入密码">
                    <span asp-validation-summary="ModelOnly" asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-left">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> 记住帐号
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-left">
                    <button type="submit" class="btn btn-primary">登录</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}