<h1><a asp-page="/Provinces/Index">全国</a> / <a asp-page="/Provinces/Details" asp-route-id="@Model.City.Provinceid">@Html.DisplayFor(model => model.City.Province.Province_name)</a> / @Html.DisplayFor(model => model.City.City_name)</h1>
<table>
    <tr>
        <td><h4>City - 修改</h4></td>
        <td style="padding-left:13px;"><a asp-page="/Provinces/Details" asp-for="City.fk_province_id" asp-route-id="@Model.City.Provinceid">Back to List</a></td>
        <td></td>
    </tr>
</table>
<hr />
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="City.Id" />
            @*<div class="form-group">
                <label asp-for="City.fk_province_id" class="control-label"></label>
                <input asp-for="City.fk_province_id" class="form-control" />
                <span asp-validation-for="City.fk_province_id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="City.Provinceid"></label>
                <select class="form-control" asp-for="City.Provinceid">
                    @foreach (var item in Model.Provinces) {
                        <option value="@Html.Raw(item.Id)">@Html.DisplayFor(modelItem => item.Province_name)</option>
                    }
                </select>
                <span asp-validation-for="City.Provinceid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.City_name" class="control-label"></label>
                <input asp-for="City.City_name" class="form-control" />
                <span asp-validation-for="City.City_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Show_index" class="control-label"></label>
                <input asp-for="City.Show_index" class="form-control" />
                <span asp-validation-for="City.Show_index" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <div>
        
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
